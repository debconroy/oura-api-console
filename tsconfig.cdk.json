{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist"
  },
  "include": ["bin/**/*", "infra/**/*", "test/**/*"],
  "exclude": ["node_modules", "cdk.out"]
}
